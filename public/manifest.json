{
  "short_name": "Chrome extension with esbuild",
  "name": "Chrome-extension-using-esbuild-and-react",
  "description": "Template design by nhannht",
  "author": "nhannht",
  "manifest_version": 3,
  "version": "1.0.6",
  "icons": {
    "16": "favicon.ico",
    "192": "logo192.png",
    "512": "logo512.png"
  },
  "action": {
    "default_icon": {
      "16": "favicon.ico",
      "24": "logo192.png",
      "32": "logo512.png"
    },
    "default_title": "Default title",
    "default_popup": "default.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "tailwind.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
  ],
  "options_ui": {
    "page": "setting.html",
    "open_in_tab": true
  }
}
